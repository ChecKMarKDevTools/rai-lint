{
  "packages": {
    ".": {
      "release-type": "node",
      "package-name": "rai-lint",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "prerelease": false,
      "draft-pull-request": false,
      "extra-files": ["package.json"],
      "changelog-path": "CHANGELOG.md",
      "changelog-sections": [
        { "type": "feat", "section": "âœ¨ New Features", "hidden": false },
        { "type": "fix", "section": "ğŸ› Bug Fixes", "hidden": false },
        { "type": "perf", "section": "âš¡ Performance", "hidden": false },
        { "type": "refactor", "section": "ğŸ”¨ Refactoring", "hidden": false },
        { "type": "docs", "section": "ğŸ“ Documentation", "hidden": false },
        { "type": "test", "section": "âœ… Tests", "hidden": false },
        { "type": "build", "section": "ğŸ“¦ Build", "hidden": false },
        { "type": "ci", "section": "ğŸ” CI/CD", "hidden": false },
        { "type": "chore", "section": "ğŸ§° Maintenance", "hidden": false }
      ]
    },
    "packages/node-commitlint": {
      "release-type": "node",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "prerelease": false,
      "draft-pull-request": false,
      "extra-files": ["package.json"]
    },
    "packages/python-gitlint": {
      "release-type": "python",
      "bump-minor-pre-major": true,
      "bump-patch-for-minor-pre-major": true,
      "draft": false,
      "prerelease": false,
      "draft-pull-request": false,
      "extra-files": ["pyproject.toml"]
    }
  },
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "rai-lint",
      "components": ["packages/node-commitlint", "packages/python-gitlint"]
    }
  ],
  "labels": [":robot: AutoSummon"],
  "separate-pull-requests": false,
  "fork": false,
  "include-component-in-tag": false,
  "include-v-in-tag": true,
  "create-release": true
}
