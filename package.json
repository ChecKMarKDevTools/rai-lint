{
  "name": "rai-lint",
  "private": true,
  "type": "module",
  "description": "Dual-language commit-message validation framework for AI-responsible development",
  "workspaces": [
    "packages/node-commitlint"
  ],
  "engines": {
    "node": ">=20 <25"
  },
  "scripts": {
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "postinstall": "node --input-type=module -e \"import pkg from './package.json' with { type: 'json' }; process.exit(pkg.private ? 0 : 1);\" && npx lefthook install || true"
  },
  "devDependencies": {
    "@checkmarkdevtools/commitlint-plugin-rai": "^0.0.0",
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@eslint/js": "^9.39.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.46.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "globals": "^17.0.0",
    "lefthook": "^2.0.4",
    "markdownlint-cli2": "^0.20.0",
    "prettier": "^3.6.2",
    "sonar-scanner": "^3.1.0",
    "vitest": "^4.0.7"
  },
  "keywords": [
    "commitlint",
    "gitlint",
    "rai",
    "ai-attribution",
    "commit-validation",
    "git-hooks"
  ],
  "author": "Ashley Childress",
  "license": "LicenseRef-PolyForm-Shield-1.0.0",
  "volta": {
    "node": "24.11.1"
  }
}
