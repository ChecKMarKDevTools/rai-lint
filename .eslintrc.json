{
  "env": {
    "node": true,
    "es2024": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["eslint-comments"],
  "rules": {
    "import/extensions": ["error", "ignorePackages"],
    "no-console": "off",
    "max-len": ["error", { "code": 120, "ignoreUrls": true, "ignoreStrings": true }],
    "no-inline-comments": "error",
    "eslint-comments/no-use": "error"
  }
}
